generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Feedback {
  id          String @id @default(uuid())
  name        String
  description String
  rating      Float
  userId      String
  user        User   @relation(fields: [userId], references: [id])
}

model Pajamas {
  id           String         @id @default(uuid())
  name         String
  description  String
  image        String
  price        Float
  season       String
  type         String
  gender       String
  sizes        PajamaSize[]
  favorite     Boolean
  on_sale      Boolean
  sale_percent Float?
  Sale         Sale_Pajamas[]
}

model PajamaSize {
  id             String   @id @default(uuid())
  stock_quantity Int
  created_at     DateTime @default(now())
  size String

  pajamaId String
  Pajama   Pajamas @relation(fields: [pajamaId], references: [id], onDelete: Cascade)

  @@unique ([pajamaId, size])
}

model Sale {
  id         String         @id @default(uuid())
  buyer_name String
  cpf        String
  price      Float
  pajamas    Sale_Pajamas[]

  addressId String
  Address   Address @relation(fields: [addressId], references: [id])

  payment_method String
  installments   Int     @default(1)
  card_number    String?
}

model Sale_Pajamas {
  id       String @id @default(uuid())
  quantity Int
  price    Float

  pajamasId String
  Pajamas   Pajamas @relation(fields: [pajamasId], references: [id])

  saleId String
  Sale   Sale   @relation(fields: [saleId], references: [id], onDelete: Cascade)

}

model Address {
  id           String @id @default(uuid())
  zip_code     String @unique
  state        String
  city         String
  neighborhood String
  address      String
  number       String
  sale         Sale[]

  @@unique([zip_code, state, city, neighborhood, address, number])
}

model User {
  id       String     @id @default(uuid())
  name     String
  username String     @unique
  email    String     @unique
  password String
  feedback Feedback[]
}
